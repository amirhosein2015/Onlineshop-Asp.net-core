@model Onlineshop.Models.BannerItem

@{
    ViewData["Title"] = "حذف بنر";
}

<div class="container mt-4">
    <h2 class="text-danger">آیا از حذف این بنر مطمئن هستید؟</h2>

    <div class="mt-3">
        <dl class="row">
            <dt class="col-sm-2">عنوان:</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">موقعیت:</dt>
            <dd class="col-sm-10">@Model.Position</dd>

            <dt class="col-sm-2">تصویر:</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImageName))
                {
                    <img src="~/images/banners/@Model.ImageName" width="200" />
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">حذف</button>
            <a asp-action="List" class="btn btn-secondary">بازگشت</a>
        </form>
    </div>
</div>
