@model Onlineshop.Models.BannerItem

@{
    ViewData["Title"] = "افزودن بنر جدید";
}

<style>
    .form-label-bar {
        background-color: #666;
        color: white;
        padding: 8px 12px;
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
        margin-bottom: 0;
        display: block;
    }

    h2.page-title {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .form-control,
    .form-select {
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<div class="container mt-4">
    <h2 class="page-title">افزودن بنر یا اسلایدر جدید</h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="Title" class="form-label-bar">عنوان</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Link" class="form-label-bar">لینک</label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <div class="col-md-12 form-group">
                <label asp-for="Description" class="form-label-bar">توضیحات</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


        

            <div class="col-md-4 form-group">
                <label asp-for="Position" class="form-label-bar">موقعیت</label>
                <select asp-for="Position" class="form-select" id="positionSelect">
                    <option value="">-- انتخاب موقعیت --</option>
                    <option value="Slider">اسلایدر</option>
                    <option value="MiddleRightBanner">بنر راست (وسط صفحه)</option>
                    <option value="MiddleLeftBanner">بنر چپ (وسط صفحه)</option>
                    <option value="BottomRightBanner">بنر راست (پایین صفحه)</option>
                    <option value="BottomLeftBanner">بنر چپ (پایین صفحه)</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="col-md-4 form-group">
                <label asp-for="Priority" class="form-label-bar">اولویت</label>
                <input asp-for="Priority" type="number" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>




            <div class="col-md-4 form-group">
                <label class="form-label-bar">تصویر</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>
        </div>

        <div class="text-end mt-3">
            <button type="submit" class="btn btn-success">ثبت بنر</button>
            <a asp-action="List" class="btn btn-secondary">بازگشت</a>
        </div>
    </form>
</div>






